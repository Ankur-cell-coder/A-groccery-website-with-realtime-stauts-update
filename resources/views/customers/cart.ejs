<section class="cart py-16">
    <% if(session.cart) { %>
    <div class="order container mx-auto xl:w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
        </div>
        <div class="pizza-list">
            <!-- run a loop so that every added items diplay inside cart page
             -->
              <% for(let pizza of Object.values(session.cart.items)) { %>  <!-- by help of this we get array of objects becuse itmes are object -->
            <div class="flex items-center my-8">
                <img class="w-24" src="/img/<%= pizza.item.image %>" alt="">
                <div class="flex-1 ml-4">
                    <h1><%= pizza.item.name %></h1>
                    <span><%= pizza.item.size %></span>
                </div>
                <span class="flex-1"><%= pizza.qty %>Pcs</span>
                <span class="font-bold text-lg">‚Çπ <%= pizza.item.price * pizza.qty %></span>
            </div>
   <% } %>
        </div>
        <hr>

       
            <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount:</span>
                <span class="amount text-2xl font-bold ml-2">‚Çπ <%= session.cart.totalPrice %></span>
            </div>

        <!-- if user login then show this section otherwise login to continue; -->
        <% if(user) { %>
            <div>
                <form action="/orders" method="POST" class="mt-12">
                    <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4 mt-4" type="text" placeholder="Phone number">
                    <input name="address" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Address">
                   <div>
                    <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order now</button>
                </div>
                </form>
            </div>
            <% } else { %>
            <a href="/login" class="inline-block cursor-pointer px-6 btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a> 
            <% } %>
        </div>

    </div>
    <% } else { %>

     <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-#xl font-bold mb-2 mb-12">Cart Empty üòê</h1>
            <p class="text-gray-500 text-lg">
                You Probably haven't ordered a Cake yet.<br>
                To order a Cake, go to the main page.
            </p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
            
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary 
            text-white font-bold mt-12">Go Back</a>
    
        </div>
    
    </div> 
<% } %>


</section>