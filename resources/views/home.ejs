<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">Fresh Vegetables and Fruits.</h1>
   
<div>
    <form  action="/" method="POST" class="mt-12">
        <div>
            <input name="item_name" class="border border-gray-400 p-2 w-1/2 mb-4 mt-4" type="text" placeholder="Search any item">
        </div>
        <button class="btn-primary px-8 py-2 rounded-full text-white font-bold mt-6" type="submit">Enter to search</button>
        <button class="btn-primary px-8 py-2 rounded-full text-white font-bold mt-6" type="submit">Reset search</button>
    </form>
</br>
</br>
</div>


    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 col-gap-12 row-gap-16">
        <!-- we make all part dynamic not hardcoded -->
        <!-- here we receive pizzas array from backend because it is 
        array so we can easily apply for each loop on tha -->
     
        <% pizzas.forEach(function(pizza){ %>
            
          
            <div class="w-full md:w-64">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%= pizza.price %></span>
                        <button data-pizza="<%= JSON.stringify(pizza)%>"  class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div> 
           

       <% }) %>
       <!-- int this section javascript portion is covered under<%%> -->
        
    </div>
</section>